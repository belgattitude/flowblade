{
  "$schema": "https://raw.githubusercontent.com/raineorshine/npm-check-updates/main/src/types/RunOptions.json",
  "workspaces": true,
  "deep": false,
  "mergeConfig": true,
  "root": true,
  "packageManager": "yarn",
  "reject": [
    "eslint",
    // Cause flowblade does not yet support latest typescript-result
    "typescript-result",
    // Till shadcn supports v3
    "recharts",

    // hono-api can be challenging to auto-update, uncomment
    // if needed

    // "@standard-community/standard-json",
    // "@standard-community/standard-openapi",
    // "hono-openapi",

    // Cause duckdb depends on an old version of apache-arrow
    "apache-arrow",
    // Till @vercel/otel support offers support for v2
    "@opentelemetry/api",
    "@opentelemetry/api-logs",
    "@opentelemetry/instrumentation",
    "@opentelemetry/resources",
    "@opentelemetry/sdk-logs",
    "@opentelemetry/sdk-metrics",
    "@opentelemetry/sdk-trace-base"
  ]
}
