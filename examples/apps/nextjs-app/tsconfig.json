{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "strict": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "incremental": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "react-jsx",
    "paths": {
      "@examples/base-auth": ["../../shared/base-auth/src/index"],
      "@examples/db-sqlserver/kysely-types": [
        "../../shared/db-sqlserver/src/kysely-types.ts"
      ],
      "@examples/base-ui/postcss.config.mjs": [
        "../../shared/base-ui/postcss.config.mjs"
      ],
      "@examples/base-ui/*": ["../../shared/base-ui/src/*"],
      "@/components/*": ["./src/components/*"],
      "@/config/*": ["./src/config/*"],
      "@/env/*": ["./src/env/index/*"],
      "@/features/*": ["./src/features/*"],
      "@/providers/*": ["./src/providers/*"],
      "@/redux/*": ["./src/redux/*"],
      "@/server/*": ["./src/server/*"],
      "@/lib/*": ["./src/lib/*"]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "types": ["@testing-library/dom", "vitest/globals"],
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "exclude": ["**/node_modules"],
  "include": [
    ".eslintrc.*",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "**/*.cjs",
    "**/*.mjs",
    "**/*.json",
    ".next/types/**/*.ts",
    ".storybook/**/*.ts",
    ".storybook/**/*.tsx",
    ".next/dev/types/**/*.ts"
  ]
}
