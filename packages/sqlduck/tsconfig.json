{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "Bundler",
    "verbatimModuleSyntax": true,
    "strict": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "allowImportingTsExtensions": true,
    "incremental": true,
    "lib": ["esnext"],
    "paths": {
      "@flowblade/core": ["../core/src/index"],
      "@flowblade/source-duckdb": ["../source-duckdb/src/index"],
      "@flowblade/source-kysely": ["../source-kysely/src/index"],
      "@flowblade/sql-tag": ["../sql-tag/src/index"]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["vitest/globals"]
  },
  "exclude": ["**/node_modules"],
  "include": [
    ".eslintrc.*",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "**/*.cjs",
    "**/*.mjs",
    "**/*.json"
  ]
}
